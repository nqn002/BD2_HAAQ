pipeline {
    agent any 
    tools{
        maven 'maven_3_8_6'
    }
    stages {
        stage('Build Maven'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/nqn002/BD2_HAAQ']]])
                echo 'mvn clean install'
            }
        }
        
        
        stage('Data acquisition Build Docker') { 
            steps {
                script{
                    echo  'docker build -t DockerFile_data_fetch .'
                   }  
             }
      }
               
                
                
            
        
        stage('Data acquisition Run Docker') { 
            steps {
                script{
                echo 'docker run --rm DockerFile_data_fetch .'
                }
                
            }
        }
       
    } 
}
